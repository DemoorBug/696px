extends ../layoutadmin
block nav
  .nav-collapse
    ul.nav
      li
        a(href='index-2.html')
          span.se7en-home(aria-hidden='true')
          | Dashboard
      li
        a(href='social.html')
          span.se7en-feed(aria-hidden='true')
          | Social Feed
      li.dropdown
        a(data-toggle='dropdown', href='#')
          span.se7en-star(aria-hidden='true')
          | Features
      li.dropdown
        a(data-toggle='dropdown', href='#')
          span.se7en-forms(aria-hidden='true')
          | Forms
      li.dropdown
        a.current(data-toggle='dropdown', href='#')
          span.se7en-tables(aria-hidden='true')
          | Tables
      li
        a(href='charts.html')
          span.se7en-charts(aria-hidden='true')
          | Charts
      li.dropdown
        a(data-toggle='dropdown', href='#')
          span.se7en-pages(aria-hidden='true')
          | Pages
      li
        a(href='gallery.html')
          span.se7en-gallery(aria-hidden='true')
          | Gallery

block content
  .container-fluid.main-content
    .page-title
      h1
        | #{title}
    //- DataTables Example
    .row
      .col-lg-12
        .widget-container.fluid-height.clearfix
          .heading
            i.icon-table
            | #{update}
          .widget-content.padded.clearfix
            table#datatable-editables.table.table-bordered.table-striped
              thead
                th
                  | 文章标题
                th.hidden-xs(width='10%')
                  | 分类
                th.hidden-xs(width='10%')
                  | 来源
                th.hidden-xs(width='15%')
                  | 录入时间
                th.hidden-xs(width='10%')
                  | Pv
                th(width='60') 查看
                th(width='60') 更新
                th(width='75') 删除
              tbody
                each item in movies
                  tr(class="item-id-#{item._id}")
                    td
                      | #{item.title}
                    td.hidden-xs
                      | 分类
                    td.hidden-xs
                      | #{item.source}
                    td.hidden-xs
                      | #{moment(item.meta.updateAt).format('YYYY/MM/DD HH:mm:ss')}
                    td.hidden-xs
                      | #{item.pv}
                    td
                      a(target="_blank",href="../movie/#{item._id}") 查看
                    td
                      a(target="_blank",href="../admin/update/#{item._id}") 修改
                    td
                      a.dal(href="javascript:;",data-id="#{item._id}") 删除
  script(src="/js/admin.js")
