block content
  .container
    .row
      .col-lg-8
        .matter_fl_page
          .mod_a
            a.mod_a_a(href='http://www.696px.com', target='_blank')
              i &#xE905;
              em 696Px健身吧
            span &raquo;
            b #{keyword}
          ul.mod_u
            if movies && movies.length > 0
              each item in movies
                li
                  span #{moment(item.meta.updateAt).format('MM.DD')}
                  a(href='/movie/#{item._id}', target='_blank', title=item.title) #{item.title}
          // Page换页
          .pageNum
            if currentPage != 1
              span
                a(target='_self', href='/results?#{query}&p=#{currentPage-2}') &lt;

            - for(var i = 0;i<totalpage; i++){
              - if(currentPage == (i+1)){
                  span#pageNN
                    a(target='_self', href='javascript:;') #{currentPage}
              - }else {
                  span
                    a(target='_self', href='/results?#{query}&p=#{i}') #{i + 1}
              - }
            - }
            if currentPage != totalpage
              span
                a(target='_self', href='/results?#{query}&p=#{currentPage}') &gt;
