extends ../layoutadmin
block nav
  .nav-collapse
    ul.nav
      li
        a(href='/admin')
          span.se7en-home(aria-hidden='true')
          | 内容列表
      li
        a(href='/admin/user')
          span.se7en-feed(aria-hidden='true')
          | 用户列表
      li
        a(href='/admin/form')
          span.se7en-forms(aria-hidden='true')
          | 新增内容
      li
        a(href='/admin/category/list')
          span.se7en-tables(aria-hidden='true')
          | 分类列表
      li
        a.current(href='/admin/category')
          span.se7en-charts(aria-hidden='true')
          | 分类添加

block content
  .container-fluid.main-content
    .page-title
      h1
        | #{title}
    .row
      .col-lg-12
        .widget-container.fluid-height.clearfix
          .heading
            i.icon-reorder
            | #{update}
          .widget-content.padded
            form.form-horizontal(method="post",action="/admin/category/save")
              if category._id
                input(type="hidden",name="category[_id]",value=category._id)
              .form-group
                label.control-label.col-md-2 分类
                .col-md-7
                  input.form-control(type='text',name='category[name]',value=category.name)
              .form-group
                  label.control-label.col-md-2 发布
                  .col-md-7
                    button.btn.btn-primary(type='submit') 提交
